{
  "builders": [
    {
      "type": "virtualbox-iso",
        "http_directory": "http",
        "http_port_min": "8100",
        "boot_wait": "7s",
        "boot_command": [
          "<wait>1",
          "<wait10><wait><wait>I",
          "<wait5><tab><tab><tab><wait><enter>",
          "<wait><enter>",
          "<wait5><enter>",
          "<wait10><wait5><enter>",
          "<wait5><wait><enter>",
          "<wait10><wait10><wait10><wait10><wait10>",
          "<wait>n<enter><wait>",
          "<wait>em0<enter><wait>",
          "<wait><enter><wait>",
          "<wait>y<enter>",
          "<wait10><wait5>",
          "14<enter>",
          "<wait>y<enter>",
          "<wait>8<enter>",
          "<wait>pkg upgrade<wait><enter>",
          "<wait>y<wait><enter><wait5>",
          "<wait10><wait10><wait10>",
          "<wait>pkg install -y sudo<wait><enter><wait5>",
          "<wait>pkg install -y bash<wait><enter><wait5>",
          "<wait>pkg install -y virtualbox-ose-additions<wait><enter>",
          "<wait10><wait10><wait10>",
          "<wait>rehash<enter>",
          "<wait>pw usermod root -h 0<wait><enter>",
          "<wait>vagrant<enter>",
          "<wait>pw adduser vagrant -m -s /usr/local/bin/bash<enter>",
          "<wait>pw usermod vagrant -h 0<enter>",
          "<wait>vagrant<enter>",
          "<wait>pw group mod wheel -m vagrant<enter>",
          "<wait>echo '%wheel ALL=(ALL) NOPASSWD: ALL' >> /usr/local/etc/sudoers<enter>",
          "<wait>chmod 0440 /usr/local/etc/sudoers<wait><enter>",
          "<wait5>reboot<enter>",
          "<wait10><wait10><wait10>",
          "<wait10><wait10><wait10>",
          "<wait>8<enter><wait>",
          "easyrule pass wan tcp 10.0.2.2 10.0.2.15 22<enter>",
          "<wait10><wait10><wait10>"
        ],
      "disk_size": 8192,
      "guest_additions_mode": "disable",
      "guest_os_type": "FreeBSD",
      "iso_checksum": "bc2b498f82fd94e1637ceb4900ca44c6f66f082a6f452b5dec864a8064cacb2a",
      "iso_checksum_type": "sha256",
      "iso_urls": [ "pfSense-LiveCD-2.2.3-RELEASE-i386.iso" ],
      "shutdown_command": "sudo shutdown -p now",
      "ssh_port": 22,
      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "10000s",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "512"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--nic2",
          "intnet"
        ]
      ],
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "pfSense"
    }
  ],
   "provisioners": [
    {
      "type": "file",
      "source": "http/",
      "destination": "/home/vagrant"
    },
    {
      "type": "shell",
      "execute_command": "echo 'vagrant'|sudo -S bash '{{.Path}}'",
      "pause_before": "5s",
      "scripts": [
        "scripts/config.sh",
        "scripts/vmtools.sh",
        "scripts/vagrant.sh"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output" : "pfSense_{{.Provider}}_{{isotime}}.box",
      "keep_input_artifact": false
    }
  ]
}
